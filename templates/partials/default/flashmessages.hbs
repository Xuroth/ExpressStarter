        <button type="close" class="close" data-dismiss="alert">
            <i class="fal fa-times"></i>
        </button>
    </div>
{{else}}
{{/each}}
{{#each messages.default as |message|}}
    <div class="flash-bar alert alert-dark alert-dismissable fade show" role="alert">
        <strong><i class="fal fa-comment-alt"></i> Hey:</strong> {{message}}
        <button type="close" class="close" data-dismiss="alert">
            <i class="fal fa-times"></i>
        </button>
    </div>
{{else}}
{{/each}}
